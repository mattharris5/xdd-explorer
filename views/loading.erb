<div class="container loading">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Please Wait</h3>
		</div>

		<div class="panel-body">
			<p>Currently generating schema <b><%= h(params['splat'].first) %></b></p>

			<div class="progress">
				<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
					<span class="sr-only">Loading...</span>
				</div>
			</div>
			
			<pre><%= JSON.pretty_generate @info %></pre>
			
			<p>
				<center><a class="btn btn-success" href="javascript:window.location.reload(true)"><i class="glyphicon glyphicon-repeat"></i> Refresh</a></center>
			</p>
		</div>
	
	</div>
</div>
